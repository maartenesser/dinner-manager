<%= simple_form_for [@group, @dinner, @member] do |f| -%>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?  %>
  <%= f.input :attending, input_html: { autocomplete: "attending",class: "attending-checkbox" }  %>
  <%= f.button :submit, style: "display: none;",  class: "submit-button-checkbox" %>
<% end -%>
