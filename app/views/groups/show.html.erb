<div class="container">
  <hr>
  <h1 class="text-center"><%= @group.name.capitalize %></h1>
  <hr>
  <div class="members">
    <h3>Members</h3>
    <ol>
      <% @members.each do |member| %>
        <li><%= member.email %></li>
      <% end %>
    </ol>
  </div>

  <div class="dinners">
    <h3>Dinners</h3>
    <ol>
      <% @dinners.each do |dinner| %>
        <li>
          <%= link_to dinner.name, group_dinner_path(@group, dinner) %> |
          <%= link_to "Edit", edit_group_dinner_path(@group, dinner) %> |
          <%= link_to "Delete", group_dinner_path(@group, dinner), data: {confirm: "Are you sure you whant to delete #{dinner.name}?"}, method: :delete  %>
        </li>
      <% end %>
    </ol>
  </div>
  <%= link_to "Back", groups_path  %> |
  <%= link_to "Organize Dinner", new_group_dinner_path(@group)  %> |
  <%= link_to "Invite People to the group", new_group_membership_path(@group)  %>
</div>
